{
    "$schema": "http://json-schema.org/schema#",
    "title": "Project",
    "type": "object",
    "properties": {
        "identifier": {
            "type": "string",
            "description": "Identifier of the project, corresponding to its directory name."
        },
        "name": {
            "type": "string",
            "description": "Name of the project."
        },
        "type": {
            "type": "string",
            "enum": [
                "SoftwareApplication",
                "WebSite",
                "WebApplication"
            ],
            "description": "Schema.org type."
        },
        "applicationCategory": {
            "type": "string",
            "description": "Schema.org application category."
        },
        "title": {
            "type": "string",
            "description": "Title of the project."
        },
        "subtitle": {
            "type": "string",
            "description": "Subtitle of the project."
        },
        "headline": {
            "type": "string",
            "description": "Headline of the project."
        },
        "description": {
            "type": "string",
            "maxLength": 100,
            "description": "Short description of the project (max 100 characters)."
        },
        "technologies": {
            "type": "object",
            "properties": {
                "server": {
                    "type": "array",
                    "contains": {
                        "enum": [
                            "Node.js",
                            "Express"
                        ]
                    },
                    "minItems": 1,
                    "description": "List of server technologies used for the project."
                },
                "data": {
                    "type": "array",
                    "contains": {
                        "enum": [
                            "AWS S3"
                        ]
                    },
                    "minItems": 1,
                    "description": "List of data related technologies used for the project."
                },
                "hosting": {
                    "type": "array",
                    "contains": {
                        "enum": [
                            "Heroku"
                        ]
                    },
                    "minItems": 1,
                    "description": "List of hosting technologies used for the project."
                },
                "frontEnd": {
                    "type": "array",
                    "contains": {
                        "enum": [
                            "Vanilla JS"
                        ]
                    },
                    "minItems": 1,
                    "description": "List of front-end technologies used for the project."
                },
                "other": {
                    "type": "array",
                    "contains": {
                        "enum": [
                            "PptxGenJS"
                        ]
                    },
                    "minItems": 1,
                    "description": "List of other important technologies used for the project."
                }
            },
            "additionalProperties": false
        },
        "inLanguage": {
            "type": "string",
            "description": "Language of the project."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "Address of the web page."
        },
        "github": {
            "type": "string",
            "format": "uri",
            "description": "Address of the GitHub repo."
        },
        "keywords": {
            "type": "array",
            "contains": {
                "type": "string"
            },
            "minItems": 2,
            "description": "Keywords for SEO."
        },
        "dateCreated": {
            "type": "number",
            "minimum": 2018,
            "description": "Creation year."
        },
        "license": {
            "type": "string",
            "format": "uri",
            "description": "Link to the license."
        }
    },
    "required": [
        "identifier",
        "name",
        "type",
        "applicationCategory",
        "title",
        "subtitle",
        "headline",
        "description",
        "technologies",
        "inLanguage",
        "keywords",
        "dateCreated",
        "license"
    ],
    "additionalProperties": false
}
